{
string $sels[];
$sels = `ls -sl`;

string $children[];
string $objects[];

if(!size($sels) > 0)
{
	//CHECK FOR SELECTION
	error("Must \"select\" an object.");
}

/////////////////////////////////////////////////////////////////////
$objects[size($objects)] = $sels[0];
$children = `listRelatives -allDescendents $sels`;

int $i = (size($objects));
appendStringArray($children, $objects, $i);


/////////////////////////////////////////////////////////////////////


print ($children);
}