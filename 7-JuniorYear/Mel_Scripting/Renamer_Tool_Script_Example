{
string $sels[];
$sels = `ls -sl`;

string $children[];

if(!size($sels) > 0)
{
	//CHECK FOR SELECTION
	error("Must \"select\" an object.");
}

/////////////////////////////////////////////////////////////////////
proc list_children(string $selected)
{
    $children = `listRelatives -children $selected`;
    $size = size($children);
    for($i=0;$i<$size;++$i)
    {
        print $children[$i];
        print "\n";
        list_children($children[$i]);
    }
}

$sel= `ls -sl`;

for ($list in $sel)
{
    list_children($list);
}
/////////////////////////////////////////////////////////////////////



print ($children);


}

