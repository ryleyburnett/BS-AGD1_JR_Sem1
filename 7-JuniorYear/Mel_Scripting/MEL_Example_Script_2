{

string $names = {"Bill", "Mary", "Jonathan"}
string $fruits = {"Apples", "Oranges", "Raspberry"}
string $veggies = {"Carrots", "Celery", "Tomato"}

for ($i=0; $i<size($names); $i++)
{
	print ($names[$i] + "\n");
}

for ($i=0; $i<size($fruits); $i++)
{
	print ($fruits[$i] + "\n");
}

for ($i=0; $i<size($veggies); $i++)
{
	print ($veggies[$i] + "\n");
}

